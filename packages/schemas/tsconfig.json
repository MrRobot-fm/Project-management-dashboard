{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@workspace/schemas": ["src/*"]
    }
  },
  "include": ["src"]
}
